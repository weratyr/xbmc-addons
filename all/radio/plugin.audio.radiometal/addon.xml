    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Live-Stream from the Swedish Rock Radio "Bandit Metal</summary>
    <summary lang="de">Live-Stream des schwedischen Rocksenders "Bandit M“egal</summary>
    <description lang="en">Listen to all kind of rock music, powered by Bandit Metal</description>
    <description lang="de">Genieße alle Arten von Rockmusik, powered by Bandit Metal</description>
