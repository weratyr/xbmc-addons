<addons>
<addon id="plugin.audio.radiobandit"
       name="Bandit Rock Webradio"
       version="1.0.0"
       provider-name="Daniel Krah, Weratyr">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Live-Stream from the Swedish Rock Radio "Bandit Rock"</summary>
    <summary lang="de">Live-Stream des schwedischen Rocksenders "Bandit Rock"</summary>
    <description lang="en">Listen to all kind of rock music, powered by Bandit Rock</description>
    <description lang="de">Genieße alle Arten von Rockmusik, powered by Bandit Rock</description>
    <platform>all</platform>
   </extension>
</addon>

