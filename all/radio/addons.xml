<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.audio.radiobandit"
       name="Bandit Rock Webradio"
       version="1.0.0"
       provider-name="Daniel Krah, Weratyr">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Live-Stream from the Swedish Rock Radio "Bandit Rock"</summary>
    <summary lang="de">Live-Stream des schwedischen Rocksenders "Bandit Rock"</summary>
    <description lang="en">Listen to all kind of rock music, powered by Bandit Rock</description>
    <description lang="de">Genieße alle Arten von Rockmusik, powered by Bandit Rock</description>
    <platform>all</platform>
   </extension>
</addon>

<addon id="plugin.audio.rockmetal"
       name="Rockantenne Metal"
       version="1.0.0"
       provider-name="Moorviper">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Live-Stream from rockantenne</summary>
    <summary lang="de">Live-Stream von rockantenne</summary>
    <description lang="en">Listen to all kind of metal music, powered by Rockantenne</description>
    <description lang="de">Genieße alle Arten von Mretalmusik, powered by Rockantenne</description>
   </extension>
</addon>

<addon id="repository.radio.all" name="Metal Radio Add-on Repository" version="1.0.0" provider-name="Daniel Krah, Weratyr">
  <extension point="xbmc.addon.repository" name="Metal Radio Add-on Repository">
    <info compressed="false">http://raw.github.com/weratyr/xbmc-addons/master/all/radio/addons.xml</info>
    <checksum>http://raw.github.com/weratyr/xbmc-addons/master/all/radio/addons.xml.md5</checksum>
    <datadir zip="true">http://raw.github.com/weratyr/xbmc-addons/master/all/radio/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Live-Stream from the Swedish Rock Radio "Bandit Rock"</summary>
    <summary lang="de">Live-Stream des schwedischen Rocksenders "Bandit Rock"</summary>
    <description lang="en">Listen to all kind of rock music, powered by Bandit Rock</description>
    <description lang="de">Genieße alle Arten von Rockmusik, powered by Bandit Rock</description>
     <platform>all</platform>
  </extension>
</addon>
</addons>
